# EditorConfig - NowScrobbling v2.0
# https://editorconfig.org

root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files (WordPress standard: tabs)
[*.php]
indent_style = tab
indent_size = 4

# JavaScript and TypeScript (spaces)
[*.{js,ts,mjs,cjs}]
indent_style = space
indent_size = 2

# CSS and SCSS
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# JSON, YAML, and config files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown (preserve trailing whitespace for line breaks)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Composer and NPM config
[{composer.json,package.json}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles (require tabs)
[Makefile]
indent_style = tab

# Git config
[.git*]
indent_style = space
indent_size = 2

# PHPUnit config
[phpunit.xml]
indent_style = space
indent_size = 4
