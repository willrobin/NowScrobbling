{
    "name": "willrobin/nowscrobbling",
    "description": "WordPress plugin to display Last.fm and Trakt.tv activity via shortcodes",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Robin Will",
            "homepage": "https://robinwill.de/"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "NowScrobbling\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NowScrobbling\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=.phpcs.xml",
        "phpcbf": "phpcbf --standard=.phpcs.xml",
        "check": [
            "@phpcs",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
